{
  "name": "alfa-voice-crypto-copilot",
  "version": "1.0.0",
  "description": "SaaS de análise de criptomoedas por comando de voz em português brasileiro",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\" \"npm run dev:worker\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:worker": "npm run dev --workspace=apps/worker",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "build:worker": "npm run build --workspace=apps/worker",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\" \"npm run start:worker\"",
    "start:web": "npm run start --workspace=apps/web",
    "start:api": "npm run start --workspace=apps/api",
    "start:worker": "npm run start --workspace=apps/worker",
    "test": "npm run test --workspaces",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "type-check": "npm run type-check --workspaces",
    "db:migrate": "npm run db:migrate --workspace=apps/api",
    "db:seed": "npm run db:seed --workspace=apps/api",
    "db:studio": "npm run db:studio --workspace=apps/api",
    "db:reset": "npm run db:reset --workspace=apps/api",
    "db:generate": "npm run db:generate --workspace=apps/api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "setup": "npm install && npm run docker:up && sleep 10 && npm run db:migrate && npm run db:seed",
    "setup:dev": "npm install && npm run db:generate && npm run build",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "postinstall": "npm run db:generate --workspace=apps/api",
    "deploy:web": "npm run deploy --workspace=apps/web",
    "deploy:api": "npm run deploy --workspace=apps/api",
    "deploy:railway": "railway up",
    "health": "curl -f http://localhost:3001/api/health || exit 1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/alfa-voice-crypto.git"
  },
  "keywords": [
    "cryptocurrency",
    "voice-assistant",
    "speech-to-text",
    "text-to-speech",
    "crypto-analysis",
    "saas",
    "portuguese",
    "brasil"
  ],
  "author": "Equipe ALFA",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seu-usuario/alfa-voice-crypto/issues"
  },
  "homepage": "https://github.com/seu-usuario/alfa-voice-crypto#readme"
}