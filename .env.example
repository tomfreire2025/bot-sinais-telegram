# ===========================================
# ALFA - Voice Crypto Copilot
# Configurações de Ambiente
# ===========================================

# ===========================================
# AMBIENTE
# ===========================================
NODE_ENV=development
PORT=3001

# ===========================================
# BANCO DE DADOS
# ===========================================
DATABASE_URL=postgresql://alfa_user:alfa_password@localhost:5432/alfa_dev
DATABASE_URL_PROD=postgresql://username:password@host:5432/alfa_prod

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_URL_PROD=redis://username:password@host:6379

# ===========================================
# AUTENTICAÇÃO
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# ===========================================
# APIS EXTERNAS
# ===========================================

# OpenAI (STT + LLM)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# ElevenLabs (TTS)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# CoinMarketCap (Dados de Cripto)
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
COINMARKETCAP_BASE_URL=https://pro-api.coinmarketcap.com

# CoinGecko (Backup de dados)
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# ===========================================
# PAGAMENTOS
# ===========================================

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Planos
FREE_PLAN_LIMIT=10
PRO_PLAN_PRICE_ID=price_your-pro-plan-price-id

# ===========================================
# FRONTEND
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ===========================================
# OBSERVABILIDADE
# ===========================================

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=alfa-api
OTEL_SERVICE_VERSION=1.0.0

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=alfa-api

# ===========================================
# EMAIL
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@alfa-crypto.com

# ===========================================
# ARMAZENAMENTO
# ===========================================

# AWS S3 (Para arquivos de áudio)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=alfa-audio-files

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# SEGURANÇA
# ===========================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ===========================================
# DESENVOLVIMENTO
# ===========================================
DEBUG=true
LOG_LEVEL=debug
ENABLE_SWAGGER=true

# ===========================================
# PRODUÇÃO
# ===========================================
# Descomente para produção
# NODE_ENV=production
# DATABASE_URL=${DATABASE_URL_PROD}
# REDIS_URL=${REDIS_URL_PROD}
# JWT_SECRET=${JWT_SECRET_PROD}
# CORS_ORIGIN=https://alfa-crypto.com