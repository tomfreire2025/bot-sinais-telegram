# =============================================================================
# ALFA - Voice Crypto Copilot - Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_NAME="ALFA Voice Crypto Copilot"
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL Database
DATABASE_URL="postgresql://alfa_user:alfa_password@localhost:5432/alfa_db?schema=public"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=alfa_db
DATABASE_USER=alfa_user
DATABASE_PASSWORD=alfa_password

# Redis Cache & Sessions
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET="your-super-secret-nextauth-key-here"
NEXTAUTH_URL=http://localhost:3000

# JWT Settings
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN=7d

# Session Settings
SESSION_SECRET="your-session-secret-here"
SESSION_MAX_AGE=604800000

# -----------------------------------------------------------------------------
# AI & Speech Services
# -----------------------------------------------------------------------------
# OpenAI (GPT + Whisper STT)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_WHISPER_MODEL="whisper-1"

# ElevenLabs TTS (Text-to-Speech)
ELEVENLABS_API_KEY="your-elevenlabs-api-key-here"
ELEVENLABS_VOICE_ID="your-preferred-voice-id"

# Azure Cognitive Services (Alternative TTS)
AZURE_SPEECH_KEY="your-azure-speech-key"
AZURE_SPEECH_REGION="your-azure-region"

# -----------------------------------------------------------------------------
# Cryptocurrency Data APIs
# -----------------------------------------------------------------------------
# CoinGecko API
COINGECKO_API_KEY="your-coingecko-api-key"
COINGECKO_BASE_URL="https://api.coingecko.com/api/v3"

# Binance API (Optional)
BINANCE_API_KEY="your-binance-api-key"
BINANCE_SECRET_KEY="your-binance-secret-key"

# CoinMarketCap API (Optional)
COINMARKETCAP_API_KEY="your-coinmarketcap-api-key"

# -----------------------------------------------------------------------------
# Payment Processing
# -----------------------------------------------------------------------------
# Stripe
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Stripe Price IDs
STRIPE_PRICE_ID_FREE="price_free_plan_id"
STRIPE_PRICE_ID_PRO="price_pro_plan_id"

# -----------------------------------------------------------------------------
# Email Services
# -----------------------------------------------------------------------------
# SendGrid
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@alfa-crypto.com"

# Resend (Alternative)
RESEND_API_KEY="re_your-resend-api-key"

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="alfa-audio-files"

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318"
OTEL_SERVICE_NAME="alfa-voice-crypto"
OTEL_RESOURCE_ATTRIBUTES="service.name=alfa,service.version=1.0.0"

# Sentry Error Tracking
SENTRY_DSN="your-sentry-dsn-here"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="alfa-voice-crypto"

# LogTail/BetterStack
LOGTAIL_SOURCE_TOKEN="your-logtail-source-token"

# -----------------------------------------------------------------------------
# Rate Limiting & Security
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# CORS Settings
CORS_ORIGIN="http://localhost:3000,https://alfa-crypto.com"
CORS_CREDENTIALS=true

# -----------------------------------------------------------------------------
# WebSocket & Real-time
# -----------------------------------------------------------------------------
WEBSOCKET_PORT=3002
WEBSOCKET_PATH="/ws"
WEBSOCKET_CORS_ORIGIN="*"

# -----------------------------------------------------------------------------
# Background Jobs & Queues
# -----------------------------------------------------------------------------
# Bull/BullMQ Redis Queue
QUEUE_REDIS_URL="redis://localhost:6379"
QUEUE_DEFAULT_JOB_OPTIONS='{"removeOnComplete":10,"removeOnFail":50}'

# Job Concurrency
AUDIO_PROCESSING_CONCURRENCY=5
CRYPTO_DATA_SYNC_CONCURRENCY=3

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------
# Debug Settings
DEBUG="alfa:*"
LOG_LEVEL="debug"
ENABLE_QUERY_LOGGING=true

# Testing
TEST_DATABASE_URL="postgresql://test_user:test_password@localhost:5433/alfa_test_db"
TEST_REDIS_URL="redis://localhost:6380"

# -----------------------------------------------------------------------------
# Docker & Infrastructure
# -----------------------------------------------------------------------------
# Docker Compose Overrides
COMPOSE_PROJECT_NAME=alfa
COMPOSE_FILE=docker-compose.yml:docker-compose.override.yml

# Health Check URLs
HEALTH_CHECK_URL="/api/health"
HEALTH_CHECK_INTERVAL=30000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_VOICE_COMMANDS=true
FEATURE_REAL_TIME_ALERTS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_SOCIAL_SHARING=false

# -----------------------------------------------------------------------------
# Limits & Quotas
# -----------------------------------------------------------------------------
# Free Plan Limits
FREE_PLAN_MONTHLY_REQUESTS=10
FREE_PLAN_AUDIO_DURATION_SECONDS=30
FREE_PLAN_STORAGE_MB=100

# Pro Plan Limits
PRO_PLAN_MONTHLY_REQUESTS=1000
PRO_PLAN_AUDIO_DURATION_SECONDS=300
PRO_PLAN_STORAGE_MB=5000

# File Upload Limits
MAX_AUDIO_FILE_SIZE_MB=10
ALLOWED_AUDIO_FORMATS="mp3,wav,m4a,ogg"

# -----------------------------------------------------------------------------
# Caching
# -----------------------------------------------------------------------------
CACHE_TTL_CRYPTO_PRICES=60
CACHE_TTL_USER_SESSIONS=3600
CACHE_TTL_API_RESPONSES=300

# -----------------------------------------------------------------------------
# Localization
# -----------------------------------------------------------------------------
DEFAULT_LOCALE="pt-BR"
SUPPORTED_LOCALES="pt-BR,en-US"
TIMEZONE="America/Sao_Paulo"

# -----------------------------------------------------------------------------
# Analytics & Tracking
# -----------------------------------------------------------------------------
# Google Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Mixpanel
MIXPANEL_TOKEN="your-mixpanel-token"

# PostHog
POSTHOG_API_KEY="your-posthog-api-key"
POSTHOG_HOST="https://app.posthog.com"